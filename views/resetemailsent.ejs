<body class="crm_body_bg">
  <section class="large_header_bg">
    <div class="main_content_iner">
      <div class="container-fluid p-0">
        <div class="row justify-content-center">
          <div class="col-lg-12">
            <div class="white_box mb_30">
              <div class="row justify-content-center">
                <div class="col-lg-6">
                  <div style="display: flex" class="justify-content-center">
                    <img style="width: 100px" src="img/qc.png" alt="" />
                  </div>
                  <div
                    style="display: flex"
                    class="justify-content-center text-center"
                  >
                    <p style="padding: 20px">
                      We have sent a reset code to
                      <span style="color: blue; font: bold; font-size: 18px"
                        ><%= email %></span
                      >
                      please check your mail to get your code
                    </p>
                  </div>
                  <div class="modal-content cs_modal">
                    <div class="modal-header justify-content-center theme_bg_1">
                      <h5 class="modal-title text_white">Verify Email</h5>
                    </div>
                    <div class="modal-body">
                      <%- include ("./partials/messages"); %>

                      <form id="myForm" action="/reset" method="POST">
                        <div class="">
                          <input
                            type="text"
                            name="code"
                            id="code"
                            class="form-control"
                            placeholder="Enter your code"
                            required
                          />
                        </div>

                        <button class="btn_1 full_width text-center">
                          Submit
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
