<form action="/register" method="post">
    <!-- ROW 1 -->
  
    <div class="main-title mb_30 pt_30">
        <h3 class="m-0">Part 1: Personal Data</h3>
      </div>
    <div class="row justify-content-between text-left">
      <div class="form-group col-sm-6 flex-column d-flex">
        <label class="text-start">Firstname</label>
        <input
          type="text"
          id="studentFirstname"
          name="studentFirstname"
          placeholder="Enter Firstname"
          value="<%= typeof studentFirstname != 'undefined' ? studentFirstname : '' %>"
          required
        />
      </div>
      <div class="form-group col-sm-6 flex-column d-flex">
        <label class="text-start">Lastname</label>
        <input
          type="text"
          id="studentLastname"
          name="studentLastname"
          placeholder="Enter studentLastname"
          value="<%= typeof studentLastname != 'undefined' ? studentLastname : '' %>"
          required
        />
      </div>
    </div>
    <!-- ROW 2 -->
    <div class="row justify-content-between text-left">
      <div class="form-group col-sm-6 flex-column d-flex">
        <label class="text-start"
          >Middlename
          <span class="text-muted">(optional)</span>
        </label>
        <input
          type="text"
          id="studentMiddlename"
          name="studentMiddlename"
          placeholder="Enter studentMiddlename"
          value="<%= typeof studentMiddlename != 'undefined' ? studentMiddlename : '' %>"
         
        />
      </div>
      <div class="form-group col-sm-6 flex-column d-flex">
        <label class="text-start">Date Of Birth</label>
        <input
          type="date"
          id="dateOfBirth"
          name="dateOfBirth"
          value="<%= typeof dateOfBirth != 'undefined' ? dateOfBirth : '' %>"
          required
        />
      </div>
    </div>
    <!-- ROW 3 -->

    <!-- ROW 4 -->
    <div class="row justify-content-between text-left">
      <div class="form-group col-sm-6 flex-column d-flex">
        <label class="text-start">Marital Status</label>
        <select
          class="form-select"
          id="marital_stattus"
          name="marital_status"
          required
        >
          <option value="">select</option>
          <option value="Married">Married</option>
          <option value="Single">Single</option>
        </select>
      </div>
      <div class="form-group col-sm-6 flex-column d-flex">
        <label class="text-start">nationality</label>
        <input
          type="text"
          id="nationality"
          name="nationality"
          placeholder="Enter Nationality"
          value="<%= typeof nationality != 'undefined' ? nationality : '' %>"
          required
        />
    </div>
    </div>

 
    <!-- ROW 7 -->
    <div class="row justify-content-between text-left">
      <div class="form-group col-sm-6 flex-column d-flex">
        <label class="text-start">State Of Origin</label>
        <input
          type="text"
          id="state_of_origin"
          name="state_of_origin"
          placeholder="Enter state of origin"
          value="<%= typeof state_of_origin != 'undefined' ? stateOfOrigin : '' %>"
          required
        />
      </div>
      <div class="form-group col-sm-6 flex-column d-flex">
        <label class="text-start">LGA</label>
        <input
          type="text"
          id="lg"
          name="lg"
          placeholder="lg"
          value="<%= typeof lg != 'undefined' ? lg : '' %>"
          required
        />
      </div>
    </div>

    <!-- Residiential  -->
    <!-- Resediential -->
  
    <div class="main-title mb_30 pt_30">
        <h3 class="m-0">Residential Addres</h3>
      </div>
    

    <!-- ROW 8 -->
    <div class="row justify-content-between text-left">
        <div class="form-group col-sm-6 flex-column d-flex">
          <label class="text-start">Phone 1</label>
          <input
            type="text"
            id="mobile_phone_1"
            name="mobile_phone_1"
            placeholder="Enter Phone 1"
            value="<%= typeof mobile_phone_1 != 'undefined' ? mobile_phone_1 : '' %>"
            required
          />
        </div>
        <div class="form-group col-sm-6 flex-column d-flex">
            <label class="text-start">Phone 2</label>
            <input
              type="text"
              id="phone_2"
              name="phone_2"
              placeholder="Enter Phone 2"
              value="<%= typeof phone_2 != 'undefined' ? phone_2 : '' %>"
              required
            />
          </div>

      </div>
    <!-- ROW 9 -->
    <div class="row justify-content-between text-left">
      <div class="form-group col-12 flex-column d-flex">
        <label class="text-start">Email Address</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Enter Email Address"
          value="<%= typeof email != 'undefined' ? email : '' %>"
          required
        />
      </div>
    </div>
    <!-- ROW 10 -->
    <div class="row justify-content-between text-left">
      <div class="form-group col-12 flex-column d-flex">
        <label class="text-start"
          >Disability</label
        >
        <input
          type="text"
          id="disability"
          name="disability"
          placeholder="Enter disability"
          value="<%= typeof disability != 'undefined' ? disability : '' %>"
          required
        />
      </div>
    </div>

    
        <div class="main-title mb-25">
            <h3 class="m-0">Part 2: ACCADEMIC INFORMATION</h3>
          </div>

    <!-- ROW 11 -->
    <!-- last secondary school attended -->

      <div class="row justify-content-between text-left">
        <div class="form-group col-12 flex-column d-flex">
          <label class="text-start"
            >last secondary school attended</label
          >
          <input
            type="text"
            id="last_secondary_school_attended"
            name="last_secondary_school_attended"
            placeholder="last secondary school attended"
           
          />
        </div>
      </div>
   
      <!-- ROW 12 -->
    <div class="row justify-content-between text-left">
      <div class="form-group col-6 flex-column d-flex">
        <label class="text-start">year of graduation</label>
        <input
          type="email"
          id="fatherEmail"
