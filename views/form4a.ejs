    <section class="main_content dashboard_part large_header_bg">
      <div class="container-fluid g-0">
        <div class="row">
          <div class="col-lg-12 p-0">
            <div
              class="header_iner d-flex justify-content-between align-items-center"
            >
              <div class="sidebar_icon d-lg-none">
                <i class="ti-menu"></i>
              </div>
              <div class="serach_field-area d-flex align-items-center">
                <div class="search_inner">
                  <form action="index.html#">
                    <div class="search_field">
                      <input type="text" placeholder="Search here..." />
                    </div>
                    <button type="submit">
                      <img src="img/icon/icon_search.svg" alt="" />
                    </button>
                  </form>
                </div>
                <span class="f_s_14 f_w_400 ml_25 white_text text_white"
                  >Apps</span
                >
              </div>
              <div
                class="header_right d-flex justify-content-between align-items-center"
              >
                <div class="profile_info">
                  <img src="img/client_img.png" alt="#" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  
      <div class="main_content_iner overly_inner">
        <div class="container-fluid p-0 sm_padding_15px">
          <div class="row">
            <div class="col-12">
              <div
                class="page_title_box d-flex align-items-center justify-content-between"
              >
                <div class="page_title_left">
                  <h3 class="f_s_30 f_w_700 text_white">
                    Study Abroad Application
                  </h3>
                  <ol class="breadcrumb page_bradcam mb-0">
                    <li class="breadcrumb-item">Application</li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
  
          <div class="row">
            <div class="col-lg-8 mx-auto p-0 m-0">
              <div class="white_card card_height_100 mb_30">
                <div class="white_card_header">
                  <div class="box_header m-0">
                    <div class="main-title">
                      <h3 class="m-0">
                        Please fill in these information carefully
                      </h3>
                    </div>
                  </div>
                </div>
                <div class="white_card_body">
                  <div class="">
                    <form onsubmit="showLoader()" action="/form4a" method="post">
                      <div style="margin-bottom: 30px">
                        <h3
                          style="
                            color: #03374c;
                            font-size: 16px;
                            text-transform: uppercase;
                            font: 900;
                          "
                        >
                          Tertiary Education Summary
                        </h3>
                      </div>
  
                 
    
                        <!-- efirst last middle-->
                        <div class="row mb-3">
                          <div class="col-md-6">
                            <label class="form-label" for="inputEmail4"
                              >Name of other tertiary institution attended
                            </label>
                            <input
                              type="text"
                              class="form-control"
                              name="ts_school_other"
                              placeholder="Your Answer"
                            />
                          </div>
                          <div class="col-md-6">
                            <label class="form-label" for="inputEmail4"
                              >Country of other tertiary
                              institution/education</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              name="ts_country_other"
                              placeholder="Your Answer"
                            />
                          </div>
                        </div>
                        <!-- address email-->
                        <div class="row mb-3">
                          <div class="col-md-12">
                            <label class="form-label" for="inputEmail4"
                              >Address of other tertiary institution attended
                            </label>
                            <input
                              type="text"
                              class="form-control"
                              name="ts_address_other"
                              placeholder="Your Answer"
                            />
                          </div>
                        </div>
                        <!-- address email-->
                        <div class="row mb-3">
                          <div class="col-md-4">
                            <label class="form-label" for="inputEmail4">
                              Started/attended tertiary institution from
                            </label>
                            <input
                              type="date"
                              class="form-control"
                              name="ts_date_start_other"
                              placeholder="Phone Number"
                            />
                          </div>
                          <div class="col-md-4">
                            <label class="form-label" for="inputEmail4">
                              Left/graduated from other tertiary institution on
                            </label>
                            <input
                              type="date"
                              class="form-control"
                              name="ts_date_end_other"
                              placeholder="Relationship Status"
                            />
                          </div>
                          <div class="col-md-4">
                            <label class="form-label" for="inputEmail4">
                              other tertiary institution award/certificate
                            </label>
                            <input
                              type="text"
                              class="form-control"
                              name="ts_certificate_other"
                              placeholder="Your answer"
                            />
                          </div>
                        </div>
    
                        <div class="row mb-3">
                          <div class="col-md-6">
                            <label class="form-label" for="inputEmail4">
                              Date of other tertiary institution award/certificate
                            </label>
                            <input
                              type="date"
                              class="form-control"
                              name="ts_date_c_other"
                              placeholder="Phone Number"
                            />
                          </div>
                          <div class="col-md-6">
                            <label class="form-label" for="inputEmail4">
                              Grade of Award
                            </label>
                            <select class="form-select" name="ts_grade_award_other">
                              <option value="">select</option>
                              <option value="Other">Other</option>
                              <option value="E">E</option>
                              <option value="D">D</option>
                              <option value="B/BC">B/BC</option>
                              <option value="A/A+">A/A+</option>
                              <option value="MPhil">MPhil</option>
                              <option value="Merit">Merit</option>
                              <option value="F">F</option>
                              <option value="Second class/Upper credit">
                                Second class/Upper credit
                              </option>
                              <option value="Second class/Lower credit">
                                Second class/Lower credit
                              </option>
                              <option value="AB/B">AB/B</option>
                              <option value="First Class/ Distiction">
                                First Class/ Distiction
                              </option>
                            </select>
                          </div>
                        </div>
    
                        <div class="row mb-3">
                          <div class="col-md-12">
                            <label class="form-label" for="inputEmail4">
                              If you chose "other" above, please, state the grade
                              below, if not, skip to next
                            </label>
                            <input
                              type="text"
                              class="form-control"
                              name="ts_other_other"
                              placeholder="Your Answer"
                            />
                          </div>
                        </div>
                      </div>
  
                      <input
                        type="hidden"
                        name="help"
                        value=" <%= applicationId %>"
                      />
  
                      <button type="submit" class="btn btn-primary">
                        Continue
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  
      <div class="footer_part">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <div class="footer_iner text-center">
                <p>
