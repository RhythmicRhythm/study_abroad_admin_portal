    <section class="main_content dashboard_part large_header_bg">
      <div class="container-fluid g-0">
        <div class="row">
          <div class="col-lg-12 p-0">
            <div
              class="header_iner d-flex justify-content-between align-items-center"
            >
              <div class="sidebar_icon d-lg-none">
                <i class="ti-menu"></i>
              </div>
              <div class="serach_field-area d-flex align-items-center">
                <div class="search_inner">
                  <form action="index.html#">
                    <div class="search_field">
                      <input type="text" placeholder="Search here..." />
                    </div>
                    <button type="submit">
                      <img src="img/icon/icon_search.svg" alt="" />
                    </button>
                  </form>
                </div>
                <span class="f_s_14 f_w_400 ml_25 white_text text_white"
                  >Apps</span
                >
              </div>
              <div
                class="header_right d-flex justify-content-between align-items-center"
              >
                <div class="profile_info">
                  <img src="img/client_img.png" alt="#" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  
      <div class="main_content_iner overly_inner">
        <div class="container-fluid p-0 sm_padding_15px">
          <div class="row">
            <div class="col-12">
              <div
                class="page_title_box d-flex align-items-center justify-content-between"
              >
                <div class="page_title_left">
                  <h3 class="f_s_30 f_w_700 text_white">
                    Study Abroad Application
                  </h3>
                  <ol class="breadcrumb page_bradcam mb-0">
                    <li class="breadcrumb-item">Application</li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
  
          <div class="row">
            <div class="col-lg-8 mx-auto p-0 m-0">
              <div class="white_card card_height_100 mb_30">
                <div class="white_card_header">
                  <div class="box_header m-0">
                    <div class="main-title">
                      <h3 class="m-0">
                        Please fill in these information carefully
                      </h3>
                    </div>
                  </div>
                </div>
                <div class="white_card_body">
                  <div class="">
                    <form onsubmit="showLoader()" action="/form5c" method="post">
                  
  
                      <div style="margin-bottom: 30px">
                        <div style="margin-bottom: 30px">
                          <h3
                            style="
                              color: #03374c;
                              font-size: 16px;
                              text-transform: uppercase;
                              font: 900;
                            "
                          >
                            Refrees
                          </h3>
                          <p>
                            Provide 3 of 3 academic / professional referees (for
                            references), please they must have valid official (work)
                            emails (Gmail, Yahoo and the likes, are not acceptable)
                          </p>
                        </div>
      
                          <!-- address email-->
                          <div class="row mb-3">
                            <div class="col-md-12">
                              <label class="form-label" for="inputEmail4"
                                >Full name of referee
                              </label>
                              <input
                                type="text"
                                class="form-control"
                                name="r_fullname_3"
                                placeholder="Your Answer"
                                required
                              />
                            </div>
                          </div>
                          <!-- efirst last middle-->
                          <div class="row mb-3">
                            <div class="col-md-6">
                              <label class="form-label" for="inputEmail4"
                                >Email of referee
                              </label>
                              <input
                                type="email"
                                class="form-control"
                                name="r_email_3"
                                placeholder="email"
                                required
                              />
                            </div>
                            <div class="col-md-6">
                              <label class="form-label" for="inputEmail4"
                                >Phone number of referee</label
                              >
                              <input
                                type="text"
                                class="form-control"
                                name="r_phone_3"
                                placeholder="Phone"
                                required
                              />
                            </div>
                          </div>
                          <!-- address email-->
                          <div class="row mb-3">
                            <div class="col-md-6">
                              <label class="form-label" for="inputEmail4"
                                >Name of employer of referee</label
                              >
                              <input
                                type="text"
                                class="form-control"
                                name="r_employer_3"
                                placeholder="Your Answer"
                                required
                              />
                            </div>
                            <div class="col-md-6">
                              <label class="form-label" for="inputEmail4">
                                Address of employer of referee
                              </label>
                              <input
                                type="text"
                                class="form-control"
                                name="r_address_3"
                                placeholder="Address"
                                required
                              />
                            </div>
                          
                          </div>
      
                          <div class="row mb-3">
                              <div class="col-md-12">
                                <label class="form-label" for="inputEmail4">
                                  Rank of referee  at place of employment/work
                                </label>
                                <input
                                  type="text"
                                  class="form-control"
                                  name="r_rank_3"
                                  placeholder="Your Answer"
                                  required
                                />
                              </div>
                            </div>
                          </div>
                      </div>
  
                      <input
                        type="hidden"
                        name="help"
                        value=" <%= applicationId %>"
                      />
  
                      <button type="submit" class="btn btn-primary">
                        Continue
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  
      <div class="footer_part">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <div class="footer_iner text-center">
                <p>
